// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Influencers{
  id              Int      @id @default(autoincrement())
  email           String   @unique
  insta_username  String   @unique
  name            String?   
  Details         InfluencerDetail?

}

model InfluencerDetail{

  id             Int       @id @default(autoincrement())
  contentType    String[]
  influencerType String[]
  audienceAge    Int
  posts          String
  platformLink   String[]
  author         Influencers      @relation(fields: [authorId], references: [id])
  authorId       Int       @unique
  
}

model Brands{
  id             Int        @id @default(autoincrement())
  email          String     @unique
  insta_username String     @unique
  companyName    String     
  Details        BrandsDetails?

}

model BrandsDetails{
  id                             Int        @id @default(autoincrement())
  productDescription             String
  productDescriptionFile         String
  targetAudienceDescription      String?
  influencerType                 String[]
  no_Of_Posts_or_PromotionVideos Int
  campaignGoal                   String
  campaignBudget                 Int
  author                         Brands      @relation(fields: [authorId], references: [id])
  authorId                       Int         @unique
}
